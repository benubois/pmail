#!/usr/bin/env ruby
require 'pmail'
require 'optparse'

config  = Pmail::Config.new

options = {
  :body => STDIN.read
}

optparse = OptionParser.new do |opts| 
  
  opts.on( '-f FROM', "From address. Must be a valid Postmark signature." ) do |arg|
    options[:from] = arg
  end

  opts.on( '-t TO', "To address." ) do |arg|
    options[:to] = arg
  end

  opts.on( '-s SUBJECT', "Subject" ) do |arg|
    options[:subject] = arg
  end

  opts.on( '-b BODY', "Specify body on on the command line." ) do |arg|
    options[:body] = arg
  end

  opts.on('-h', '--help', 'Display help info') do                                                                                                                                                               
    puts opts                                                                                                                                                                                                     
    exit                                                                                                                                                                                                          
  end
end


begin
  optparse.parse!                                                                                                                                                                                            
  
  options = config.settings.merge(options)
  
  puts options.inspect
                                                                                                                                                                                                          
  mandatory = [:from, :to, :body, :api_key]
  missing = mandatory.select{ |param| options[param].nil? }
  if not missing.empty?
    puts "Missing options: #{missing.join(', ')}"
    puts optparse
    exit
  end
rescue OptionParser::InvalidOption, OptionParser::MissingArgument
  puts $!.to_s
  puts optparse
  exit
end



begin
  
  message = Pmail::Message.new
  message.api_key = options[:api_key]
  message.from    = options[:from]
  message.to      = options[:to]
  message.subject = options[:subject]
  message.body    = options[:body]
  message.send  
  
rescue Postmark::InvalidMessageError
  puts "Invalid message: " + $!.to_s
  exit 1
rescue Exception => e
  puts e.to_s
  exit 1
end



# Kernel.abort('test') if options[:subject].nil?

